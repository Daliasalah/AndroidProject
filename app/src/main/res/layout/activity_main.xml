<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ffffff">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="0"/>


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="443dp"
            android:layout_height="573dp"
            android:src="@drawable/note1"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-91dp" />


    <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notebooks"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#7B1E58"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
            android:id="@+id/textviewe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="notebooks is the best place \n to manage your Notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview"/>

    <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textStyle="bold"
            android:onClick="#800040"
            android:background="@drawable/radius"
            app:layout_constraintTop_toBottomOf="@+id/textviewe"
            android:padding="16dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textStyle="bold"
            android:background="@drawable/radiuss"
            android:onClick="#800040"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:padding="16dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:paddingTop="16dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>